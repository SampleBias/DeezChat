# Large files
*.iso filter=lfs diff=lfs merge=lfs -text
*.dmg filter=lfs diff=lfs merge=lfs -text
*.exe filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar.gz filter=lfs diff=lfs merge=lfs -text
*.tar.bz2 filter=lfs diff=lfs merge=lfs -text

# Binary files
*.png filter=lfs diff=lfs merge=lfs -binary
*.jpg filter=lfs diff=lfs merge=lfs -binary
*.jpeg filter=lfs diff=lfs merge=lfs -binary
*.gif filter=lfs diff=lfs merge=lfs -binary
*.pdf filter=lfs diff=lfs merge=lfs -binary

# Source code
*.py text diff=python
*.md text diff=markdown
*.yaml text diff=yaml
*.yml text diff=yaml
*.json text diff=json
*.txt text diff=plain
*.sh text diff=bash
Dockerfile text diff=dockerfile
docker-compose.* text diff=yaml
